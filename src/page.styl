
blue = hsl(240,40,95)

body
  position absolute
  width 100%
  height 100%
  background blue

*
  overflow auto
  height 100%
  width 100%

.button
  width auto
  margin 2px 4px
  display inline-block
  padding 4px 6px
  height 28px
  font-size 16px
  color white
  background hsl(240,50,70)
  box-shadow 0px 0px 4px hsl(0,0,100)
  border-radius 4px